{
  "name": "@trivia/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "types:generate": "wrangler types",
    "db:migrate:local": "wrangler d1 migrations apply trivia-db --local",
    "db:migrate:staging": "wrangler d1 migrations apply trivia-db --env staging --remote",
    "db:migrate:prod": "wrangler d1 migrations apply trivia-db --env production --remote",
    "db:seed": "wrangler d1 execute trivia-db --local --file=./seeds/seed.sql",
    "clean": "rm -rf dist .wrangler .turbo"
  },
  "dependencies": {
    "@trivia/shared": "workspace:*",
    "hono": "^4.6.14",
    "jose": "^5.9.6",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.33",
    "@cloudflare/workers-types": "^4.20241224.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2",
    "vitest": "2.1.8",
    "wrangler": "^3.99.0"
  }
}
